    <div class="field">
      <%= garage_form.label 'Garage title' %><br>
      <%= garage_form.text_field :title %>
    </div>

    <%= garage_form.fields_for :house do |house_form| %>

      <div class="field">
        <%= house_form.label 'House title' %><br>
        <%= house_form.text_field :title %>
      </div>

    <% end %>

  <% end %>

  <div class="actions">
    <%= car_form.submit %>
  </div>

<% end %>
